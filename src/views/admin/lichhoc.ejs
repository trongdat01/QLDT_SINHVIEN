    <!-- Footer -->
    <footer class="bg-light text-center text-lg-start mt-5">
        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.05);">
            © 2023 Hệ thống Quản lý Đào tạo |
            <a class="text-dark" href="/">home.com</a>
        </div>
    </footer>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Auto calculate end date based on start date
            document.getElementById('ngaybatdau').addEventListener('change', function () {
                const startDate = new Date(this.value);
                if (startDate) {
                    const endDate = new Date(startDate);
                    endDate.setMonth(endDate.getMonth() + 4);

                    // Format date as YYYY-MM-DD for input
                    const year = endDate.getFullYear();
                    const month = String(endDate.getMonth() + 1).padStart(2, '0');
                    const day = String(endDate.getDate()).padStart(2, '0');
                    document.getElementById('ngayketthuc').value = `${year}-${month}-${day}`;
                }
            });

            // Same for edit form
            document.getElementById('edit_ngaybatdau').addEventListener('change', function () {
                const startDate = new Date(this.value);
                if (startDate) {
                    const endDate = new Date(startDate);
                    endDate.setMonth(endDate.getMonth() + 4);

                    // Format date as YYYY-MM-DD for input
                    const year = endDate.getFullYear();
                    const month = String(endDate.getMonth() + 1).padStart(2, '0');
                    const day = String(endDate.getDate()).padStart(2, '0');
                    document.getElementById('edit_ngayketthuc').value = `${year}-${month}-${day}`;
                }
            });

            // Edit schedule functionality
            document.querySelectorAll('.edit-schedule').forEach(button => {
                button.addEventListener('click', function () {
                    const scheduleId = this.getAttribute('data-id');

                    // Fetch schedule details using AJAX
                    fetch(`/taikhoan/admin/lichhoc/chi-tiet/${scheduleId}`)
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                const schedule = data.schedule;

                                // Format date to YYYY-MM-DD for input field
                                const startDate = new Date(schedule.ngaybatdau);
                                const formattedStartDate = startDate.toISOString().split('T')[0];

                                const endDate = new Date(schedule.ngayketthuc);
                                const formattedEndDate = endDate.toISOString().split('T')[0];

                                // Populate form
                                document.getElementById('edit_id').value = schedule.id;
                                document.getElementById('edit_mahocphan').value = schedule.mahocphan;
                                document.getElementById('edit_namhoc').value = schedule.namhoc;
                                document.getElementById('edit_hocky').value = schedule.hocky;
                                document.getElementById('edit_ngaybatdau').value = formattedStartDate;
                                document.getElementById('edit_ngayketthuc').value = formattedEndDate;
                                document.getElementById('edit_giangvien').value = schedule.giangvien || '';
                                document.getElementById('edit_thu_lythuyet').value = schedule.thu_lythuyet || '';
                                document.getElementById('edit_cahoc_lythuyet').value = schedule.cahoc_lythuyet || '';
                                document.getElementById('edit_phonghoclythuyet').value = schedule.phonghoclythuyet || '';
                                document.getElementById('edit_thu_thuchanh').value = schedule.thu_thuchanh || '';
                                document.getElementById('edit_cahoc_thuchanh').value = schedule.cahoc_thuchanh || '';
                                document.getElementById('edit_phonghocthuchanh').value = schedule.phonghocthuchanh || '';

                                // Show modal
                                new bootstrap.Modal(document.getElementById('editScheduleModal')).show();
                            } else {
                                alert('Không thể tải thông tin lịch học: ' + data.message);
                            }
                        })
                        .catch(error => {
                            console.error('Error fetching schedule details:', error);
                            alert('Đã xảy ra lỗi khi tải thông tin lịch học');
                        });
                });
            });

            // Save schedule changes
            document.getElementById('saveScheduleChanges').addEventListener('click', function () {
                document.getElementById('editScheduleForm').submit();
            });

            // Delete schedule functionality
            document.querySelectorAll('.delete-schedule').forEach(button => {
                button.addEventListener('click', function () {
                    const scheduleId = this.getAttribute('data-id');
                    const courseName = this.getAttribute('data-course');

                    document.getElementById('delete_id').value = scheduleId;
                    document.getElementById('delete_course_name').textContent = courseName;

                    new bootstrap.Modal(document.getElementById('deleteScheduleModal')).show();
                });
            });

            // Filtering functionality
            const searchInput = document.getElementById('searchInput');
            const courseFilter = document.getElementById('courseFilter');
            const semesterFilter = document.getElementById('semesterFilter');
            const roomFilter = document.getElementById('roomFilter');

            function filterTable() {
                const searchValue = searchInput.value.toLowerCase();
                const courseValue = courseFilter.value;
                const semesterValue = semesterFilter.value;
                const roomValue = roomFilter.value;

                document.querySelectorAll('#schedulesTable tbody tr').forEach(row => {
                    // Skip rows that are just "no data" messages
                    if (row.cells.length <= 1) return;

                    const courseCode = row.cells[1].textContent.trim();
                    const courseName = row.cells[2].textContent.toLowerCase().trim();
                    const semester = row.cells[4].textContent.trim();
                    const teacher = row.cells[5].textContent.toLowerCase().trim();
                    const lt = row.cells[6].textContent.toLowerCase().trim();
                    const th = row.cells[7].textContent.toLowerCase().trim();

                    // Search by room, teacher, course name
                    const matchesSearch = lt.includes(searchValue) ||
                        th.includes(searchValue) ||
                        teacher.includes(searchValue) ||
                        courseName.includes(searchValue);

                    // Course filter - exact match on course code
                    const matchesCourse = courseValue === '' || courseCode === courseValue;

                    // Semester filter
                    const matchesSemester = semesterValue === '' || semester === semesterValue;

                    // Room filter
                    const matchesRoom = roomValue === '' ||
                        lt.includes(roomValue) ||
                        th.includes(roomValue);

                    // Show/hide row based on all filters
                    const shouldShow = matchesSearch && matchesCourse && matchesSemester && matchesRoom;
                    row.style.display = shouldShow ? '' : 'none';
                });
            }

            searchInput.addEventListener('input', filterTable);
            courseFilter.addEventListener('change', filterTable);
            semesterFilter.addEventListener('change', filterTable);
            roomFilter.addEventListener('change', filterTable);
        });
    </script>
