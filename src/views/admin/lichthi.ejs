    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Format datetime values in the table to display in local time
            document.querySelectorAll('#examSchedulesTable tbody tr').forEach(row => {
                // Skip empty rows
                if (row.cells.length <= 1) return;

                // Get the date and time cells (assuming they're at position 5 and 6)
                const dateCell = row.cells[5];
                const timeCell = row.cells[6];

                // If we have a valid timestamp, convert it to local time
                if (timeCell && dateCell) {
                    try {
                        // Extract the original date and time from the table
                        const originalDate = dateCell.textContent.trim();
                        const originalTime = timeCell.textContent.trim();

                        // Create a Date object, it will automatically be in local time
                        const dateObj = new Date(`${originalDate} ${originalTime}`);
                        if (!isNaN(dateObj.getTime())) {
                            // Format the date and time in local timezone
                            dateCell.textContent = dateObj.toLocaleDateString('vi-VN');
                            timeCell.textContent = dateObj.toLocaleTimeString('vi-VN', {
                                hour: '2-digit',
                                minute: '2-digit'
                            });
                        }
                    } catch (e) {
                        console.error('Error formatting date:', e);
                    }
                }
            });

            // Auto set day of week based on selected date
            document.getElementById('thoigianthi').addEventListener('change', function () {
                if (this.value) {
                    const date = new Date(this.value);
                    const dayOfWeek = ['Chủ Nhật', 'Thứ 2', 'Thứ 3', 'Thứ 4', 'Thứ 5', 'Thứ 6', 'Thứ 7'][date.getDay()];
                    document.getElementById('thu').value = dayOfWeek;
                }
            });

            // Same for edit form
            document.getElementById('edit_thoigianthi').addEventListener('change', function () {
                if (this.value) {
                    const date = new Date(this.value);
                    const dayOfWeek = ['Chủ Nhật', 'Thứ 2', 'Thứ 3', 'Thứ 4', 'Thứ 5', 'Thứ 6', 'Thứ 7'][date.getDay()];
                    document.getElementById('edit_thu').value = dayOfWeek;
                }
            });

            // Edit exam functionality
            document.querySelectorAll('.edit-exam').forEach(button => {
                button.addEventListener('click', function () {
                    const examId = this.getAttribute('data-id');

                    // Fetch exam details using AJAX
                    fetch(`/taikhoan/admin/lichthi/chi-tiet/${examId}`)
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                const exam = data.examSchedule;

                                // Populate form
                                document.getElementById('edit_id').value = exam.id;
                                document.getElementById('edit_mahocphan').value = exam.mahocphan;
                                document.getElementById('edit_namhoc').value = exam.namhoc;
                                document.getElementById('edit_kihoc').value = exam.kihoc;
                                document.getElementById('edit_thu').value = exam.thu;

                                // Adjust the datetime for local timezone display
                                if (exam.formattedDateTime) {
                                    document.getElementById('edit_thoigianthi').value = exam.formattedDateTime;
                                } else if (exam.thoigianthi) {
                                    // If formattedDateTime is not provided, create from thoigianthi
                                    const dateObj = new Date(exam.thoigianthi);
                                    const isoString = dateObj.toISOString().slice(0, 16);
                                    document.getElementById('edit_thoigianthi').value = isoString;
                                }

                                document.getElementById('edit_phongthi').value = exam.phongthi;
                                document.getElementById('edit_giangviencoithi').value = exam.giangviencoithi;
                                document.getElementById('edit_hinhthuathi').value = exam.hinhthuathi;
                                document.getElementById('edit_trangthai').value = exam.trangthai;

                                // Show modal
                                new bootstrap.Modal(document.getElementById('editExamModal')).show();
                            } else {
                                alert('Không thể tải thông tin lịch thi: ' + data.message);
                            }
                        })
                        .catch(error => {
                            console.error('Error fetching exam details:', error);
                            alert('Đã xảy ra lỗi khi tải thông tin lịch thi');
                        });
                });
            });

            // Save exam changes
            document.getElementById('saveExamChanges').addEventListener('click', function () {
                document.getElementById('editExamForm').submit();
            });

            // Delete exam functionality
            document.querySelectorAll('.delete-exam').forEach(button => {
                button.addEventListener('click', function () {
                    const examId = this.getAttribute('data-id');
                    const courseName = this.getAttribute('data-course');

                    document.getElementById('delete_id').value = examId;
                    document.getElementById('delete_course_name').textContent = courseName;

                    new bootstrap.Modal(document.getElementById('deleteExamModal')).show();
                });
            });

            // Filtering functionality
            const searchInput = document.getElementById('searchInput');
            const courseFilter = document.getElementById('courseFilter');
            const dateFilter = document.getElementById('dateFilter');
            const roomFilter = document.getElementById('roomFilter');
            const statusFilter = document.getElementById('statusFilter');

            function filterTable() {
                const searchValue = searchInput.value.toLowerCase();
                const courseValue = courseFilter.value;
                const dateValue = dateFilter.value;
                const roomValue = roomFilter.value;
                const statusValue = statusFilter.value;

                document.querySelectorAll('#examSchedulesTable tbody tr').forEach(row => {
                    // Skip rows that are just "no data" messages
                    if (row.cells.length <= 1) return;

                    const courseCode = row.cells[1].textContent.trim();
                    const courseName = row.cells[2].textContent.toLowerCase();
                    const examDate = row.cells[5].textContent.trim();
                    const room = row.cells[7].textContent.trim();
                    const teacher = row.cells[8].textContent.toLowerCase();
                    const status = row.cells[10].textContent.trim().toLowerCase();

                    // Search by course name, teacher
                    const matchesSearch = courseName.includes(searchValue) ||
                        teacher.includes(searchValue);

                    // Course filter - exact match on course code
                    const matchesCourse = courseValue === '' || courseCode === courseValue;

                    // Date filter - We need to handle date format differences
                    let matchesDate = true;
                    if (dateValue) {
                        // Convert to DD/MM/YYYY for comparison with Vietnamese format
                        const filterDate = new Date(dateValue);
                        const filterDateStr = filterDate.toLocaleDateString('vi-VN');
                        matchesDate = examDate === filterDateStr;
                    }

                    // Room filter
                    const matchesRoom = roomValue === '' || room === roomValue;

                    // Status filter
                    const matchesStatus = statusValue === '' || status.includes(statusValue);

                    // Show/hide row based on all filters
                    const shouldShow = matchesSearch && matchesCourse && matchesDate &&
                        matchesRoom && matchesStatus;
                    row.style.display = shouldShow ? '' : 'none';
                });
            }

            searchInput.addEventListener('input', filterTable);
            courseFilter.addEventListener('change', filterTable);
            dateFilter.addEventListener('change', filterTable);
            roomFilter.addEventListener('change', filterTable);
            statusFilter.addEventListener('change', filterTable);
        });
    </script>
</body>

