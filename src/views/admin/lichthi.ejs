                                                <tr>
                                                    <th>STT</th>
                                                    <th>Mã học phần</th>
                                                    <th>Tên học phần</th>
                                                    <th>Năm học</th>
                                                    <th>Kỳ học</th>
                                                    <th>Ngày thi</th>
                                                    <th>Giờ thi</th>
                                                    <th>Phòng thi</th>
                                                    <th>Giảng viên coi thi</th>
                                                    <th>Hình thức thi</th>
                                                    <th>Trạng thái</th>
                                                    <th>Thao tác</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% if (examSchedules && examSchedules.length> 0) { %>
                                                    <% examSchedules.forEach((schedule, index)=> {
                                                        const examDate = new Date(schedule.thoigianthi);
                                                        const formattedDate = examDate.toLocaleDateString('vi-VN');
                                                        const formattedTime = examDate.toLocaleTimeString('vi-VN', {
                                                        hour: '2-digit', minute: '2-digit' });

                                                        let statusClass = '';
                                                        if (schedule.trangthai === 'đã lên lịch') statusClass =
                                                        'bg-primary';
                                                        else if (schedule.trangthai === 'đã hoàn thành') statusClass =
                                                        'bg-success';
                                                        else if (schedule.trangthai === 'hoãn thi') statusClass =
                                                        'bg-danger';
                                                        %>
                                                        <tr>
                                                            <td>
                                                                <%= index + 1 %>
                                                            </td>
                                                            <td>
                                                                <%= schedule.mahocphan %>
                                                            </td>
                                                            <td>
                                                                <%= schedule.tenhocphan %>
                                                            </td>
                                                            <td>
                                                                <%= schedule.namhoc %>
                                                            </td>
                                                            <td>
                                                                <%= schedule.kihoc %>
                                                            </td>
                                                            <td>
                                                                <%= formattedDate %>
                                                            </td>
                                                            <td>
                                                                <%= formattedTime %>
                                                            </td>
                                                            <td>
                                                                <%= schedule.phongthi %>
                                                            </td>
                                                            <td>
                                                                <%= schedule.giangviencoithi %>
                                                            </td>
                                                            <td>
                                                                <%= schedule.hinhthuathi %>
                                                            </td>
                                                            <td>
                                                                <span class="badge <%= statusClass %>">
                                                                    <%= schedule.trangthai %>
                                                                </span>
                                                            </td>
                                                            <td class="action-buttons">
                                                                <button class="btn btn-sm btn-primary edit-exam"
                                                                    data-id="<%= schedule.id %>">Sửa</button>
                                                                <button class="btn btn-sm btn-danger delete-exam"
                                                                    data-id="<%= schedule.id %>"
                                                                    data-course="<%= schedule.tenhocphan %>">Xóa</button>
                                                            </td>
                                                        </tr>
                                                        <% }); %>
                                                            <% } else { %>
                                                                <tr>
                                                                    <td colspan="12" class="text-center">Chưa có dữ liệu
                                                                        lịch thi</td>
                                                                </tr>
                                                                <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                    <% } else { %>
                                        <div class="alert alert-warning">
                                            <h4 class="alert-heading">Bảng dữ liệu lịch thi chưa được tạo!</h4>
                                            <p>Bảng dữ liệu "lichthi" chưa tồn tại trong cơ sở dữ liệu. Bạn cần tạo bảng
                                                này trước khi quản lý lịch thi.</p>
                                            <hr>
                                            <p class="mb-0">
                                                <a href="/taikhoan/admin/create-lichthi-table" class="btn btn-primary">
                                                    <i class="bi bi-table"></i> Tạo bảng lichthi
                                                </a>
                                            </p>
                                        </div>
                                        <% } %>
                            </div>
                        </div>
    </div>

