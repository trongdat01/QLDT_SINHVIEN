    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Toggle sidebar
            document.getElementById('sidebarCollapse').addEventListener('click', function () {
                document.getElementById('sidebar').classList.toggle('collapsed');
                document.getElementById('content').classList.toggle('full-width');
                document.querySelector('.topbar').classList.toggle('full-width');
            });

            // Set view student modal data
            const viewStudentModal = document.getElementById('viewStudentModal');
            if (viewStudentModal) {
                viewStudentModal.addEventListener('show.bs.modal', function (event) {
                    const button = event.relatedTarget;

                    // Update student details in modal
                    document.getElementById('studentName').textContent = button.getAttribute('data-student-name');
                    document.getElementById('studentId').textContent = button.getAttribute('data-student-id');
                    document.getElementById('studentEmail').textContent = button.getAttribute('data-student-email');
                    document.getElementById('studentPhone').textContent = button.getAttribute('data-student-phone');
                    document.getElementById('studentDept').textContent = button.getAttribute('data-student-dept');
                    document.getElementById('studentYear').textContent = button.getAttribute('data-student-year');
                    document.getElementById('studentGender').textContent = button.getAttribute('data-student-gender');
                    document.getElementById('studentDob').textContent = button.getAttribute('data-student-dob');
                });
            }

            // Set delete student modal data
            const deleteStudentModal = document.getElementById('deleteStudentModal');
            if (deleteStudentModal) {
                deleteStudentModal.addEventListener('show.bs.modal', function (event) {
                    const button = event.relatedTarget;
                    const studentId = button.getAttribute('data-student-id');
                    const studentName = button.getAttribute('data-student-name');

                    document.getElementById('deleteStudentId').value = studentId;
                    document.getElementById('deleteStudentName').textContent = studentName;
                });
            }

            // Add function to load student details for editing
            window.loadStudentForEdit = function (msv) {
                fetch(`/taikhoan/admin/get-student/${msv}`)
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            const student = data.student;

                            // Fill form fields with student data
                            document.getElementById('edit_msv').value = student.msv;
                            document.getElementById('edit_hovaten').value = student.hovaten;
                            document.getElementById('edit_email').value = student.email;
                            document.getElementById('edit_sodienthoai').value = student.sodienthoai || '';
                            document.getElementById('edit_khoa').value = student.khoa;
                            document.getElementById('edit_nienkhoa').value = student.nienkhoa;
                            document.getElementById('edit_gioitinh').value = student.gioitinh || '';

                            // Format date for input field (YYYY-MM-DD)
                            if (student.ngaysinh) {
                                const date = new Date(student.ngaysinh);
                                const year = date.getFullYear();
                                const month = (date.getMonth() + 1).toString().padStart(2, '0');
                                const day = date.getDate().toString().padStart(2, '0');
                                document.getElementById('edit_ngaysinh').value = `${year}-${month}-${day}`;
                            } else {
                                document.getElementById('edit_ngaysinh').value = '';
                            }

                            // Clear password fields
                            document.getElementById('edit_matkhau').value = '';
                            document.getElementById('edit_xacnhan_matkhau').value = '';
                        } else {
                            alert('Không thể tải thông tin sinh viên: ' + data.message);
                        }
                    })
                    .catch(error => {
                        console.error('Error loading student:', error);
                        alert('Đã xảy ra lỗi khi tải thông tin sinh viên');
                    });
            };
        });
    </script>
