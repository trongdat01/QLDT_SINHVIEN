    <div class="container mt-4">
        <h1 class="mb-4">Quản lý Lịch Thi</h1>

        <% if (typeof error !=='undefined' && error) { %>
            <div class="alert alert-danger alert-dismissible fade show">
                <%= error %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
            <% } %>

                <% if (typeof success !=='undefined' && success) { %>
                    <div class="alert alert-success alert-dismissible fade show">
                        <%= success %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                    <% } %>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="card">
                                    <div class="card-header d-flex justify-content-between align-items-center">
                                        <h5 class="card-title mb-0">Thêm Lịch Thi Mới</h5>
                                    </div>
                                    <div class="card-body">
                                        <form id="addExamForm" action="/taikhoan/admin/lichthi/them" method="POST"
                                            class="row g-3">
                                            <div class="col-md-4">
                                                <label for="mahocphan" class="form-label">Học Phần</label>
                                                <select class="form-select" id="mahocphan" name="mahocphan" required>
                                                    <option value="">Chọn học phần</option>
                                                    <% if (courses && courses.length> 0) { %>
                                                        <% courses.forEach(course=> { %>
                                                            <option value="<%= course.mahocphan %>">
                                                                <%= course.mahocphan %> - <%= course.tenhocphan %>
                                                            </option>
                                                            <% }); %>
                                                                <% } %>
                                                </select>
                                            </div>
                                            <div class="col-md-4">
                                                <label for="namhoc" class="form-label">Năm Học</label>
                                                <select class="form-select" id="namhoc" name="namhoc" required>
                                                    <option value="">Chọn năm học</option>
                                                    <% const currentYear=new Date().getFullYear(); for (let i=0; i < 5;
                                                        i++) { const year=currentYear + i - 2; const
                                                        academicYear=`${year}-${year+1}`; %>
                                                        <option value="<%= academicYear %>" <%=i===2 ? 'selected' : ''
                                                            %>>
                                                            <%= academicYear %>
                                                        </option>
                                                        <% } %>
                                                </select>
                                            </div>
                                            <div class="col-md-4">
                                                <label for="kihoc" class="form-label">Kỳ Học</label>
                                                <select class="form-select" id="kihoc" name="kihoc" required>
                                                    <option value="">Chọn kỳ học</option>
                                                    <option value="1">Học kỳ 1</option>
                                                    <option value="2">Học kỳ 2</option>
                                                    <option value="3">Học kỳ 3</option>
                                                </select>
                                            </div>
                                            <div class="col-md-4">
                                                <label for="thu" class="form-label">Thứ</label>
                                                <select class="form-select" id="thu" name="thu" required>
                                                    <option value="">Chọn thứ</option>
                                                    <option value="Thứ 2">Thứ 2</option>
                                                    <option value="Thứ 3">Thứ 3</option>
                                                    <option value="Thứ 4">Thứ 4</option>
                                                    <option value="Thứ 5">Thứ 5</option>
                                                    <option value="Thứ 6">Thứ 6</option>
                                                    <option value="Thứ 7">Thứ 7</option>
                                                    <option value="Chủ Nhật">Chủ Nhật</option>
                                                </select>
                                            </div>
                                            <div class="col-md-4">
                                                <label for="thoigianthi" class="form-label">Thời Gian Thi</label>
                                                <input type="datetime-local" class="form-control" id="thoigianthi"
                                                    name="thoigianthi" required>
                                            </div>
                                            <div class="col-md-4">
                                                <label for="phongthi" class="form-label">Phòng Thi</label>
                                                <input type="text" class="form-control" id="phongthi" name="phongthi"
                                                    placeholder="Nhập phòng thi" required>
                                            </div>
                                            <div class="col-md-4">
                                                <label for="giangviencoithi" class="form-label">Giảng Viên Coi
                                                    Thi</label>
