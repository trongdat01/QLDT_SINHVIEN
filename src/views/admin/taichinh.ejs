<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %> | Hệ thống Quản lý Đào tạo
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --sidebar-width: 280px;
            --topbar-height: 70px;
            --primary-color: #4e73df;
            --primary-gradient: linear-gradient(to right, #1a237e, #283593);
            --secondary-color: #f8f9fc;
            --text-dark: #5a5c69;
            --card-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            --hover-transition: all 0.3s ease;
        }

        body {
            font-family: 'Nunito', sans-serif;
            background-color: #f3f4f6;
            color: var(--text-dark);
        }

        .wrapper {
            display: flex;
            width: 100%;
            align-items: stretch;
        }

        .sidebar {
            min-width: var(--sidebar-width);
            max-width: var(--sidebar-width);
            background: var(--primary-gradient);
            color: #fff;
            transition: var(--hover-transition);
            height: 100vh;
            position: fixed;
            z-index: 100;
            box-shadow: 3px 0 10px rgba(0, 0, 0, 0.2);
        }

        .sidebar.collapsed {
            margin-left: calc(-1 * var(--sidebar-width));
        }

        .sidebar .sidebar-header {
            padding: 1.5rem 1rem;
            text-align: center;
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
            background: rgba(0, 0, 0, 0.1);
        }

        .sidebar .sidebar-header h3 {
            margin: 0;
            font-weight: 800;
            font-size: 1.5rem;
            letter-spacing: 1px;
            text-transform: uppercase;
        }

        .sidebar ul.components {
            padding: 1rem 0;
            margin: 0;
        }

        .sidebar ul li {
            list-style: none;
            position: relative;
        }

        .sidebar ul li a {
            padding: 0.8rem 1.5rem;
            display: block;
            color: rgba(255, 255, 255, 0.85);
            text-decoration: none;
            transition: var(--hover-transition);
            font-weight: 500;
            border-left: 3px solid transparent;
        }

        .sidebar ul li a:hover {
            background: rgba(255, 255, 255, 0.1);
            color: #ffffff;
            border-left-color: #ffffff;
        }

        .sidebar ul li a i {
            margin-right: 10px;
            width: 20px;
            text-align: center;
            font-size: 1.2rem;
        }

        .sidebar ul li.active a {
            background: rgba(255, 255, 255, 0.18);
            color: #ffffff;
            border-left-color: #ffffff;
        }

        .sidebar ul.collapse {
            background: rgba(0, 0, 0, 0.1);
            padding-left: 1rem;
        }

        .content {
            width: 100%;
            min-height: 100vh;
            transition: all 0.3s;
            margin-left: var(--sidebar-width);
        }

        .content.full-width {
            margin-left: 0;
        }

        .topbar {
            height: var(--topbar-height);
            background: #fff;
            box-shadow: 0 .15rem 1.75rem 0 rgba(58, 59, 69, .15);
            display: flex;
            align-items: center;
            padding: 0 1rem;
            position: fixed;
            width: calc(100% - var(--sidebar-width));
            z-index: 99;
        }

        .topbar.full-width {
            width: 100%;
        }

        .topbar-nav {
            display: flex;
            justify-content: space-between;
            width: 100%;
            align-items: center;
        }

        .sidebar-toggle {
            background: none;
            border: none;
            font-size: 1.5rem;
            color: var(--text-dark);
            cursor: pointer;
        }

        .user-info {
            display: flex;
            align-items: center;
        }

        .user-info img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-right: 10px;
        }

        .main-content {
            padding: calc(var(--topbar-height) + 1.5rem) 1.5rem 1.5rem 1.5rem;
        }

        .card {
            border: none;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.08);
            border-radius: 0.75rem;
            margin-bottom: 1.5rem;
            transition: transform 0.2s, box-shadow 0.2s;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.75rem 1.5rem rgba(0, 0, 0, 0.12);
        }

        .card-header {
            background-color: #f8f9fc;
            border-bottom: 1px solid #e3e6f0;
            padding: 1rem 1.25rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-radius: 0.75rem 0.75rem 0 0 !important;
        }

        .card-header h5 {
            margin: 0;
            font-weight: 700;
            color: #4e73df;
        }

        .table-responsive {
            overflow-x: auto;
        }

        .table {
            width: 100%;
            margin-bottom: 1rem;
            color: #212529;
            border-collapse: separate;
            border-spacing: 0 0.5rem;
        }

        .table th {
            font-weight: 600;
            color: #5a5c69;
            background-color: #f8f9fc;
            border-top: none;
            padding: 1rem;
        }

        .table td {
            padding: 1rem;
            vertical-align: middle;
            border-top: none;
            background-color: white;
        }

        .action-buttons .btn {
            margin-right: 5px;
        }

        .btn-sm {
            padding: 0.4rem 0.8rem;
            font-size: 0.875rem;
            border-radius: 50px;
            transition: all 0.2s;
        }

        .btn-primary {
            background: linear-gradient(135deg, #4e73df, #224abe);
            border: none;
            box-shadow: 0 4px 10px rgba(78, 115, 223, 0.2);
        }

        .btn-primary:hover {
            background: linear-gradient(135deg, #224abe, #1a3a8e);
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(78, 115, 223, 0.3);
        }

        .btn-info {
            background: linear-gradient(135deg, #36b9cc, #258391);
            border: none;
            color: white;
            box-shadow: 0 4px 10px rgba(54, 185, 204, 0.2);
        }

        .btn-info:hover {
            background: linear-gradient(135deg, #258391, #1a6674);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(54, 185, 204, 0.3);
        }

        .btn-warning {
            background: linear-gradient(135deg, #f6c23e, #dda20a);
            border: none;
            box-shadow: 0 4px 10px rgba(246, 194, 62, 0.2);
        }

        .btn-warning:hover {
            background: linear-gradient(135deg, #dda20a, #c69500);
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(246, 194, 62, 0.3);
        }

        .btn-danger {
            background: linear-gradient(135deg, #e74a3b, #c23321);
            border: none;
            box-shadow: 0 4px 10px rgba(231, 74, 59, 0.2);
        }

        .btn-danger:hover {
            background: linear-gradient(135deg, #c23321, #9d1f11);
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(231, 74, 59, 0.3);
        }

        .filter-row {
            margin-bottom: 15px;
        }

        .payment-badge {
            font-size: 0.8rem;
            padding: 0.3rem 0.5rem;
        }

        .amount-display {
            font-weight: bold;
        }

        .remaining-negative {
            color: red;
        }

        .remaining-zero {
            color: green;
        }

        .modal-header {
            background: var(--primary-gradient);
            color: white;
        }

        .modal-content {
            border-radius: 0.75rem;
            border: none;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }

        .footer {
            padding: 1.5rem;
            text-align: center;
            font-size: 0.9rem;
            color: #858796;
            margin-top: 2rem;
        }
    </style>
</head>

<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar" class="sidebar">
            <div class="sidebar-header">
                <h3>Quản lý Đào tạo</h3>
            </div>

            <ul class="components">
                <li>
                    <a href="/taikhoan/admin/dashboard"><i class="fas fa-tachometer-alt"></i> Bảng điều khiển</a>
                </li>
                <li>
                    <a href="#userSubmenu" data-bs-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="fas fa-users"></i> Quản lý người dùng
                    </a>
                    <ul class="collapse list-unstyled" id="userSubmenu">
                        <li>
                            <a href="/taikhoan/admin/manage-admins"><i class="fas fa-user-shield"></i> Quản trị viên</a>
                        </li>
                        <li>
                            <a href="/taikhoan/admin/manage-students"><i class="fas fa-user-graduate"></i> Sinh viên</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a href="/taikhoan/admin/manage-news"><i class="fas fa-newspaper"></i> Quản lý tin tức</a>
                </li>
                <li>
                    <a href="#courseSubmenu" data-bs-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="fas fa-book"></i> Quản lý học phần
                    </a>
                    <ul class="collapse list-unstyled" id="courseSubmenu">
                        <li>
                            <a href="/taikhoan/admin/manage-courses"><i class="fas fa-list"></i> Đăng ký học phần</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a href="/taikhoan/admin/manage-grades"><i class="fas fa-clipboard-list"></i> Quản lý điểm</a>
                </li>
                <li>
                    <a href="#scheduleSubmenu" data-bs-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="fas fa-calendar-alt"></i> Lịch học - Lịch thi
                    </a>
                    <ul class="collapse list-unstyled" id="scheduleSubmenu">
                        <li>
                            <a href="/taikhoan/admin/lichhoc"><i class="fas fa-calendar-day"></i> Lịch học</a>
                        </li>
                        <li>
                            <a href="/taikhoan/admin/lichthi"><i class="fas fa-calendar-check"></i> Lịch thi</a>
                        </li>
                    </ul>
                </li>
                <li class="active">
                    <a href="/taikhoan/admin/taichinh"><i class="fas fa-money-bill-wave"></i> Quản lý tài chính</a>
                </li>
                <li>
                    <a href="/taikhoan/admin/settings"><i class="fas fa-cog"></i> Cài đặt hệ thống</a>
                </li>
                <li>
                    <a href="/taikhoan/dang-xuat"><i class="fas fa-sign-out-alt"></i> Đăng xuất</a>
                </li>
            </ul>
        </nav>

        <!-- Page Content -->
        <div id="content" class="content">
            <nav class="topbar">
                <div class="topbar-nav">
                    <button type="button" id="sidebarCollapse" class="sidebar-toggle">
                        <i class="fas fa-bars"></i>
                    </button>
                    <div class="user-info">
                        <img src="/images/default-avatar.png" alt="Admin Avatar">
                        <div>
                            <span>Xin chào, Admin</span>
                            <div class="small">
                                <%= user.email %>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>

            <div class="main-content">
                <div class="container-fluid">
                    <h1 class="h3 mb-4 text-gray-800">Quản lý Tài Chính Sinh Viên</h1>

                    <% if (typeof error !=='undefined' && error) { %>
                        <div class="alert alert-danger alert-dismissible fade show">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            <%= error %>
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                        <% } %>

                            <% if (typeof success !=='undefined' && success) { %>
                                <div class="alert alert-success alert-dismissible fade show">
                                    <i class="fas fa-check-circle me-2"></i>
                                    <%= success %>
                                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                                <% } %>

                                    <% if (typeof tableExists !=='undefined' && !tableExists) { %>
                                        <div class="alert alert-warning mb-4">
                                            Bảng dữ liệu tài chính chưa được tạo.
                                            <a href="/taikhoan/admin/create-taichinh-table"
                                                class="btn btn-sm btn-warning ms-2">Tạo
                                                bảng tài chính</a>
                                            <a href="/taikhoan/admin/create-phieuthu-table"
                                                class="btn btn-sm btn-warning ms-2">Tạo
                                                bảng phiếu thu</a>
                                        </div>
                                        <% } else { %>
                                            <!-- Add Financial Info Card -->
                                            <div class="card shadow mb-4">
                                                <div class="card-header">
                                                    <h5 class="card-title mb-0">Thêm Thông Tin Tài Chính</h5>
                                                </div>
                                                <div class="card-body">
                                                    <form id="addFinancialForm" action="/taikhoan/admin/taichinh/them"
                                                        method="POST" class="row g-3">
                                                        <div class="col-md-4">
                                                            <label for="msv" class="form-label">Sinh Viên</label>
                                                            <select class="form-select" id="msv" name="msv" required>
                                                                <option value="">Chọn sinh viên</option>
                                                                <% students.forEach(student=> { %>
                                                                    <option value="<%= student.msv %>">
                                                                        <%= student.msv %> - <%= student.hovaten %>
                                                                    </option>
                                                                    <% }); %>
                                                            </select>
                                                        </div>
                                                        <div class="col-md-4">
                                                            <label for="khoanphainop" class="form-label">Khoản Phải Nộp
                                                                (VNĐ)</label>
                                                            <input type="number" step="1000" min="0"
                                                                class="form-control" id="khoanphainop"
                                                                name="khoanphainop" placeholder="Nhập số tiền phải nộp"
                                                                required>
                                                        </div>
                                                        <div class="col-md-4">
                                                            <label for="khoandanop" class="form-label">Khoản Đã Nộp
                                                                (VNĐ)</label>
                                                            <input type="number" step="1000" min="0"
                                                                class="form-control" id="khoandanop" name="khoandanop"
                                                                placeholder="Nhập số tiền đã nộp" value="0">
                                                        </div>
                                                        <div class="col-md-4">
                                                            <label for="khoandocmien" class="form-label">Khoản Được Miễn
                                                                (VNĐ)</label>
                                                            <input type="number" step="1000" min="0"
                                                                class="form-control" id="khoandocmien"
                                                                name="khoandocmien" placeholder="Nhập số tiền được miễn"
                                                                value="0">
                                                        </div>
                                                        <div class="col-md-4">
                                                            <label for="qr_nganhang" class="form-label">Ngân
                                                                Hàng</label>
                                                            <input type="text" class="form-control" id="qr_nganhang"
                                                                name="qr_nganhang"
                                                                placeholder="Tên ngân hàng thanh toán">
                                                        </div>
                                                        <div class="col-md-4">
                                                            <label for="qr_sotaikhoan" class="form-label">Số Tài
                                                                Khoản</label>
                                                            <input type="text" class="form-control" id="qr_sotaikhoan"
                                                                name="qr_sotaikhoan"
                                                                placeholder="Số tài khoản thanh toán">
                                                        </div>
                                                        <div class="col-md-12">
                                                            <label for="qr_tennguoinhan" class="form-label">Tên Người
                                                                Nhận</label>
                                                            <input type="text" class="form-control" id="qr_tennguoinhan"
                                                                name="qr_tennguoinhan"
                                                                placeholder="Tên người nhận thanh toán">
                                                        </div>
                                                        <div class="col-md-12">
                                                            <div class="form-check mt-2">
                                                                <input class="form-check-input" type="checkbox"
                                                                    id="trangthai_hoanthanh" name="trangthai"
                                                                    value="đã hoàn thành">
                                                                <label class="form-check-label"
                                                                    for="trangthai_hoanthanh">
                                                                    Đánh dấu là đã hoàn thành (mặc định: tự động tính
                                                                    toán
                                                                    dựa trên khoản nộp)
                                                                </label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-12">
                                                            <button type="submit" class="btn btn-primary mt-3">Thêm
                                                                Thông
                                                                Tin Tài Chính</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>

                                            <!-- Financial List Card -->
                                            <div class="card shadow mb-4">
                                                <div class="card-header">
                                                    <h5 class="card-title mb-0">Danh Sách Tài Chính</h5>
                                                </div>
                                                <div class="card-body">
                                                    <div class="row filter-row">
                                                        <div class="col-md-4">
                                                            <input type="text" id="searchInput" class="form-control"
                                                                placeholder="Tìm kiếm theo tên, mã SV...">
                                                        </div>
                                                        <div class="col-md-3">
                                                            <select id="studentFilter" class="form-select">
                                                                <option value="">Tất cả sinh viên</option>
                                                                <% students.forEach(student=> { %>
                                                                    <option value="<%= student.msv %>">
                                                                        <%= student.msv %> - <%= student.hovaten %>
                                                                    </option>
                                                                    <% }); %>
                                                            </select>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <select id="statusFilter" class="form-select">
                                                                <option value="">Tất cả trạng thái</option>
                                                                <option value="đã hoàn thành">Đã hoàn thành</option>
                                                                <option value="chưa hoàn thành">Chưa hoàn thành</option>
                                                            </select>
                                                        </div>
                                                        <div class="col-md-2">
                                                            <button id="filterButton"
                                                                class="btn btn-primary w-100">Lọc</button>
                                                        </div>
                                                    </div>

                                                    <div class="table-responsive">
                                                        <table class="table table-bordered table-hover"
                                                            id="financialTable">
                                                            <thead class="table-light">
                                                                <tr>
                                                                    <th>STT</th>
                                                                    <th>Mã SV</th>
                                                                    <th>Họ và tên</th>
                                                                    <th>Khoản phải nộp</th>
                                                                    <th>Đã nộp</th>
                                                                    <th>Được miễn</th>
                                                                    <th>Còn lại</th>
                                                                    <th>Trạng thái</th>
                                                                    <th>Thao tác</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                <% if (financialRecords && financialRecords.length> 0) {
                                                                    %>
                                                                    <% financialRecords.forEach((record, index)=> { %>
                                                                        <tr>
                                                                            <td>
                                                                                <%= index + 1 %>
                                                                            </td>
                                                                            <td>
                                                                                <%= record.msv %>
                                                                            </td>
                                                                            <td>
                                                                                <%= record.hovaten %>
                                                                            </td>
                                                                            <td class="text-end amount-display">
                                                                                <%= record.khoanphainop.toLocaleString('vi-VN')
                                                                                    %> ₫
                                                                            </td>
                                                                            <td class="text-end amount-display">
                                                                                <%= record.khoandanop.toLocaleString('vi-VN')
                                                                                    %> ₫
                                                                            </td>
                                                                            <td class="text-end amount-display">
                                                                                <%= record.khoandocmien.toLocaleString('vi-VN')
                                                                                    %> ₫
                                                                            </td>
                                                                            <td
                                                                                class="text-end amount-display <%= record.conlai <= 0 ? 'remaining-zero' : 'remaining-negative' %>">
                                                                                <%= record.conlai.toLocaleString('vi-VN')
                                                                                    %> ₫
                                                                            </td>
                                                                            <td>
                                                                                <% if
                                                                                    (record.trangthai==='đã hoàn thành'
                                                                                    ) { %>
                                                                                    <span class="badge bg-success">Đã
                                                                                        hoàn
                                                                                        thành</span>
                                                                                    <% } else { %>
                                                                                        <span
                                                                                            class="badge bg-warning text-dark">Chưa
                                                                                            hoàn thành</span>
                                                                                        <% } %>
                                                                            </td>
                                                                            <td class="action-buttons">
                                                                                <a href="/taikhoan/admin/phieuthu/<%= record.id %>"
                                                                                    class="btn btn-sm btn-info">
                                                                                    <i class="bi bi-receipt"></i> Phiếu
                                                                                    thu
                                                                                </a>
                                                                                <button
                                                                                    class="btn btn-sm btn-primary edit-financial"
                                                                                    data-id="<%= record.id %>">
                                                                                    <i class="bi bi-pencil-square"></i>
                                                                                    Sửa
                                                                                </button>
                                                                                <button
                                                                                    class="btn btn-sm btn-danger delete-financial"
                                                                                    data-id="<%= record.id %>"
                                                                                    data-msv="<%= record.msv %>"
                                                                                    data-name="<%= record.hovaten %>">
                                                                                    <i class="bi bi-trash"></i> Xóa
                                                                                </button>
                                                                            </td>
                                                                        </tr>
                                                                        <% }); %>
                                                                            <% } else { %>
                                                                                <tr>
                                                                                    <td colspan="9" class="text-center">
                                                                                        Chưa có dữ
                                                                                        liệu tài chính</td>
                                                                                </tr>
                                                                                <% } %>
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                            <% } %>
                </div>
            </div>

            <footer class="footer">
                <div class="container">
                    <span>© 2023 Hệ thống Quản lý Đào tạo Đại học. All rights reserved.</span>
                </div>
            </footer>
        </div>
    </div>

    <!-- Edit Financial Modal -->
    <div class="modal fade" id="editFinancialModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">Chỉnh sửa Thông Tin Tài Chính</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                        aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="editFinancialForm" action="/taikhoan/admin/taichinh/sua" method="POST" class="row g-3">
                        <input type="hidden" id="edit_id" name="id">

                        <div class="col-md-6">
                            <label class="form-label">Sinh viên</label>
                            <input type="text" class="form-control" id="edit_student_info" disabled>
                        </div>

                        <div class="col-md-6">
                            <label for="edit_trangthai" class="form-label">Trạng thái</label>
                            <select class="form-select" id="edit_trangthai" name="trangthai">
                                <option value="chưa hoàn thành">Chưa hoàn thành</option>
                                <option value="đã hoàn thành">Đã hoàn thành</option>
                            </select>
                        </div>

                        <div class="col-md-4">
                            <label for="edit_khoanphainop" class="form-label">Khoản Phải Nộp (VNĐ)</label>
                            <input type="number" step="1000" min="0" class="form-control" id="edit_khoanphainop"
                                name="khoanphainop" required>
                        </div>

                        <div class="col-md-4">
                            <label for="edit_khoandanop" class="form-label">Khoản Đã Nộp (VNĐ)</label>
                            <input type="number" step="1000" min="0" class="form-control" id="edit_khoandanop"
                                name="khoandanop">
                        </div>

                        <div class="col-md-4">
                            <label for="edit_khoandocmien" class="form-label">Khoản Được Miễn (VNĐ)</label>
                            <input type="number" step="1000" min="0" class="form-control" id="edit_khoandocmien"
                                name="khoandocmien">
                        </div>

                        <div class="col-md-4">
                            <label for="edit_qr_nganhang" class="form-label">Ngân Hàng</label>
                            <input type="text" class="form-control" id="edit_qr_nganhang" name="qr_nganhang">
                        </div>

                        <div class="col-md-4">
                            <label for="edit_qr_sotaikhoan" class="form-label">Số Tài Khoản</label>
                            <input type="text" class="form-control" id="edit_qr_sotaikhoan" name="qr_sotaikhoan">
                        </div>

                        <div class="col-md-4">
                            <label for="edit_qr_tennguoinhan" class="form-label">Tên Người Nhận</label>
                            <input type="text" class="form-control" id="edit_qr_tennguoinhan" name="qr_tennguoinhan">
                        </div>

                        <div class="col-md-12">
                            <div class="form-text mt-2">
                                <p>Số tiền còn lại: <span id="edit_conlai" class="fw-bold"></span></p>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    <button type="button" class="btn btn-primary" id="saveFinancialChanges">Lưu thay đổi</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Delete Financial Modal -->
    <div class="modal fade" id="deleteFinancialModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Xác nhận xóa</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                        aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Bạn có chắc chắn muốn xóa thông tin tài chính của sinh viên <span
                            id="delete_student_name"></span> (<span id="delete_student_msv"></span>)?</p>
                    <p class="text-danger">Lưu ý: Hành động này không thể hoàn tác! Thông tin phiếu thu liên quan cũng
                        sẽ bị mất.</p>
                </div>
                <div class="modal-footer">
                    <form id="deleteFinancialForm" action="/taikhoan/admin/taichinh/xoa" method="POST">
                        <input type="hidden" id="delete_id" name="id">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-danger">Xóa</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Toggle sidebar
            document.getElementById('sidebarCollapse').addEventListener('click', function () {
                document.getElementById('sidebar').classList.toggle('collapsed');
                document.getElementById('content').classList.toggle('full-width');
                document.querySelector('.topbar').classList.toggle('full-width');
            });

            // Filter button click event
            document.getElementById('filterButton').addEventListener('click', function () {
                const studentFilter = document.getElementById('studentFilter').value;
                const statusFilter = document.getElementById('statusFilter').value;

                let url = '/taikhoan/admin/taichinh/loc?';
                if (studentFilter) url += `msv=${studentFilter}&`;
                if (statusFilter) url += `trangthai=${statusFilter}`;

                window.location.href = url;
            });

            // Edit financial record
            const editButtons = document.querySelectorAll('.edit-financial');
            editButtons.forEach(button => {
                button.addEventListener('click', function () {
                    const recordId = this.getAttribute('data-id');

                    // Fetch financial record details
                    fetch(`/taikhoan/admin/taichinh/chi-tiet/${recordId}`)
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                const record = data.financialRecord;

                                // Populate modal form
                                document.getElementById('edit_id').value = record.id;
                                document.getElementById('edit_student_info').value = `${record.msv} - ${record.hovaten}`;
                                document.getElementById('edit_trangthai').value = record.trangthai;
                                document.getElementById('edit_khoanphainop').value = record.khoanphainop;
                                document.getElementById('edit_khoandanop').value = record.khoandanop;
                                document.getElementById('edit_khoandocmien').value = record.khoandocmien;
                                document.getElementById('edit_qr_nganhang').value = record.qr_nganhang || '';
                                document.getElementById('edit_qr_sotaikhoan').value = record.qr_sotaikhoan || '';
                                document.getElementById('edit_qr_tennguoinhan').value = record.qr_tennguoinhan || '';

                                // Format the remaining amount
                                const conlai = record.conlai;
                                const formattedConLai = conlai.toLocaleString('vi-VN') + ' ₫';
                                document.getElementById('edit_conlai').textContent = formattedConLai;
                                document.getElementById('edit_conlai').className = conlai <= 0 ? 'fw-bold text-success' : 'fw-bold text-danger';

                                // Show modal
                                const modal = new bootstrap.Modal(document.getElementById('editFinancialModal'));
                                modal.show();
                            } else {
                                alert('Không thể tải thông tin tài chính: ' + data.message);
                            }
                        })
                        .catch(error => {
                            console.error('Error:', error);
                            alert('Đã xảy ra lỗi khi tải thông tin tài chính');
                        });
                });
            });

            // Save financial changes
            document.getElementById('saveFinancialChanges').addEventListener('click', function () {
                document.getElementById('editFinancialForm').submit();
            });

            // Delete financial record
            const deleteButtons = document.querySelectorAll('.delete-financial');
            deleteButtons.forEach(button => {
                button.addEventListener('click', function () {
                    const recordId = this.getAttribute('data-id');
                    const msv = this.getAttribute('data-msv');
                    const name = this.getAttribute('data-name');

                    document.getElementById('delete_id').value = recordId;
                    document.getElementById('delete_student_msv').textContent = msv;
                    document.getElementById('delete_student_name').textContent = name;

                    const modal = new bootstrap.Modal(document.getElementById('deleteFinancialModal'));
                    modal.show();
                });
            });

            // Calculate remaining amount in real-time when editing
            const updateRemainingAmount = function () {
                const phainop = parseFloat(document.getElementById('edit_khoanphainop').value) || 0;
                const danop = parseFloat(document.getElementById('edit_khoandanop').value) || 0;
                const docmien = parseFloat(document.getElementById('edit_khoandocmien').value) || 0;

                const conlai = phainop - danop - docmien;
                const formattedConLai = conlai.toLocaleString('vi-VN') + ' ₫';

                document.getElementById('edit_conlai').textContent = formattedConLai;
                document.getElementById('edit_conlai').className = conlai <= 0 ? 'fw-bold text-success' : 'fw-bold text-danger';

                // Auto set status based on payment amount
                if (conlai <= 0) {
                    document.getElementById('edit_trangthai').value = 'đã hoàn thành';
                } else {
                    document.getElementById('edit_trangthai').value = 'chưa hoàn thành';
                }
            };

            document.getElementById('edit_khoanphainop').addEventListener('input', updateRemainingAmount);
            document.getElementById('edit_khoandanop').addEventListener('input', updateRemainingAmount);
            document.getElementById('edit_khoandocmien').addEventListener('input', updateRemainingAmount);

            // Search functionality
            document.getElementById('searchInput').addEventListener('input', function () {
                const searchTerm = this.value.toLowerCase();
                const rows = document.querySelectorAll('#financialTable tbody tr');

                rows.forEach(row => {
                    if (row.cells.length <= 1) return; // Skip "no data" row

                    const msv = row.cells[1].textContent.toLowerCase();
                    const name = row.cells[2].textContent.toLowerCase();

                    if (msv.includes(searchTerm) || name.includes(searchTerm)) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                });
            });
        });
    </script>
</body>

</html>